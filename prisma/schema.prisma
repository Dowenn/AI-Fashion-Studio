// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Token {
  id        String   @id @default(cuid())
  tokenKey  String   @unique             // 例如: HORSE-2026-XXXX
  quota     Int                          // 剩余次数
  createdAt DateTime @default(now())
  images    Image[]                      // 关联生成的图片
}

model Image {
  id        String   @id @default(cuid())
  url       String                       // 生成后的图片网址
  prompt    String
  tokenId   String
  token     Token    @relation(fields: [tokenId], references: [id])
  createdAt DateTime @default(now())
}
